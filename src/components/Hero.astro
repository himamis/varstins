---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import { Image } from "astro:assets";
import background from "../../public/images/oltottmesz.jpg";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="hero is-halfheight has-background">
  <Image
    src={background}
    alt="Background image"
    class="hero-background is-transparent"
  />
  <div class="hero-body">
    <div class="container has-text-centered">
      <p class="title has-text-centered is-uppercase has-text-white is-size-1">
        {t("hero.bineativenit")}
      </p>
      <div class="is-hidden-tablet">
        <a
          class="button is-primary is-large is-fullwidth mb-2"
          href="#despre-noi">{t("nav.despre")}</a
        >
        <a class="button is-link is-large is-fullwidth" href="#contact"
          >{t("nav.contact")}</a
        >
      </div>
      <div class="is-hidden-mobile">
        <a class="button is-primary is-large mr-2" href="#despre-noi"
          >{t("nav.despre")}</a
        >
        <a class="button is-link is-large ml-2" href="#contact"
          >{t("nav.contact")}</a
        >
      </div>
    </div>
  </div>
</div>

<style>
  .hero.has-background {
    position: relative;
    overflow: hidden;
  }
  .hero-background {
    position: absolute;
    object-fit: cover;
    object-position: center center;
    width: 100%;
    height: 100%;
  }
</style>
